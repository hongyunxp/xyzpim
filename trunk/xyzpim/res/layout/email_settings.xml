<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:paddingTop="10px">
	<TableLayout android:animationCache="false"
		android:clipToPadding="false" android:padding="12dip"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:stretchColumns="1">

		<TableRow>
			<TextView android:textAlign="end"
				android:text="@string/account_name" />
			<EditText android:id="@+id/email_account_name_text" />
		</TableRow>
		<TableRow>
			<TextView android:textAlign="end"
				android:text="@string/email_addr" />
			<EditText android:id="@+id/email_account_addr_text"
				android:scrollHorizontally="true" />
		</TableRow>
		<TableRow>
			<TextView android:textAlign="end"
				android:text="@string/ssl" />
			<CheckBox android:id="@+id/email_ssl_checkbox" />
		</TableRow>
		<TableRow>
			<TextView android:textAlign="end"
				android:text="@string/smtp_host" />
			<EditText android:id="@+id/email_smtp_host_text"
				android:scrollHorizontally="true" />
		</TableRow>
		<TableRow>
			<TextView android:textAlign="end"
				android:text="@string/smtp_port" />
			<EditText android:id="@+id/email_smtp_port_text"
				android:digits="1234567890" />
		</TableRow>
		<TableRow>
			<TextView android:textAlign="end"
				android:text="@string/pop3_host" />
			<EditText android:id="@+id/email_pop3_host_text"
				android:scrollHorizontally="true" />
		</TableRow>
		<TableRow>
			<TextView android:textAlign="end"
				android:text="@string/pop3_port" />
			<EditText android:id="@+id/email_pop3_port_text"
				android:digits="1234567890" />
		</TableRow>
		<TableRow>
			<TextView android:textAlign="end"
				android:text="@string/username" />
			<EditText android:id="@+id/email_username_text"
				android:scrollHorizontally="true" />
		</TableRow>
		<TableRow>
			<TextView android:textAlign="end"
				android:text="@string/password" />
			<EditText android:id="@+id/email_password_text"
				android:scrollHorizontally="true" android:password="true" />
		</TableRow>
	</TableLayout>
</ScrollView>
