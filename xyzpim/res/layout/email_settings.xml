<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:animationCache="false" android:clipToPadding="false"
	android:padding="12dip" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:stretchColumns="1">

	<TableRow>
		<TextView android:textAlign="end" android:text="@string/emailSetting" />
		<EditText android:id="@+id/email_emailSetting_text"/>
	</TableRow>
	<TableRow>
		<TextView android:textAlign="end" android:text="@string/smtp" />
		<EditText android:id="@+id/email_smtp_text"/>
	</TableRow>
		<TableRow>
		<TextView android:textAlign="end" android:text="@string/ftp" />
		<EditText android:id="@+id/email_ftp_text"/>
	</TableRow>
		<TableRow>
		<TextView android:textAlign="end" android:text="@string/port" />
		<EditText android:id="@+id/email_port_text"/>
	</TableRow>
		<TableRow>
		<TextView android:textAlign="end" android:text="@string/pop3" />
		<EditText android:id="@+id/email_pop3_text"/>
	</TableRow>
		<TableRow>
		<TextView android:textAlign="end" android:text="@string/username" />
		<EditText android:id="@+id/email_username_text"/>
	</TableRow>
	<TableRow>
		<TextView android:textAlign="end" android:text="@string/key" />
		<EditText android:id="@+id/email_key_text"/>
	</TableRow>

	

</TableLayout>
