<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:animationCache="false" android:clipToPadding="false"
	android:padding="12dip" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:stretchColumns="1">

	<TableRow>
		<TextView  android:text="@string/title" />
		<EditText android:id="@+id/task_title" />
	</TableRow>

	<TableRow>
		<TextView  android:text="@string/time" />
		<EditText android:id="@+id/task_time" />
	</TableRow>
	<TableRow>
			<TextView android:text="@string/important" />
			<CheckBox android:id="@+id/important_notify" />
		</TableRow>
	
	<TableRow>
			<TextView  android:text="@string/notify" />
			<EditText android:id="@+id/task_notify" />
	</TableRow>
	<EditText android:layout_height="fill_parent"
					android:id="@+id/task_content"/>
</TableLayout>
